# Cub Scout Web Application - Test Environment Configuration
# Copy this file to .env and update with your actual values

# Base URL of your application
BASE_URL=http://localhost:8080

# Admin user credentials
# This should be a user with admin privileges in your application
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_admin_password

# Regular user credentials  
# This should be a regular (non-admin) user account
USER_EMAIL=testuser@yourdomain.com
USER_PASSWORD=testuser123

# Optional: Super password (if configured in your application)
# This is the "super" password mentioned in your security notes that allows login as anyone
SUPER_PASSWORD=super

# Test configuration
# Set to true to run tests more slowly for debugging
SLOW_MO=false

# Set to true to keep browser open after tests (useful for debugging)
HEADED=false
